<!-- cardview_product.xml -->

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    app:cardCornerRadius="12dp"
    android:elevation="50dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Product Image -->
        <ImageView
            android:id="@+id/newProductImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="10dp"
            android:src="@drawable/redshirt" />

        <!-- Headline -->
        <TextView
            android:id="@+id/newHeadline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Headline"
            android:gravity="center_horizontal"
            android:textSize="24sp"
            android:textStyle="bold"
            android:padding="8dp" />
        <TextView
            android:id="@+id/newDescription"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:text="Product description goes here"
            android:maxLines="3" />

        <!-- Description -->


        <!-- Price -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="8dp"
            android:gravity="center"
            android:paddingEnd="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price: $"
                android:textStyle="bold"
                android:textSize="22sp"/>

            <TextView
                android:id="@+id/newPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19.99"
                android:textSize="22sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Brand -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Brand: "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/newBrand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Product brand"
                android:maxLines="1" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
